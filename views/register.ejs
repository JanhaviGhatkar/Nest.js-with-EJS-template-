<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration Form</title>
    <link
      rel="icon"
      href="https://th.bing.com/th/id/OIP.TEFGCq9meFGAI-HttxxCEQAAAA?rs=1&pid=ImgDetMain"
      type="image/x-icon"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="../../css/register.css" />
  </head>
  <body>
    <div class="registration-container">
      <h2>Register</h2>
      <div class="form-group">
        <label for="id">Id:</label>
        <input type="text" id="id" name="id" placeholder="ex.1,2,3" />
      </div>
      <div class="form-group">
        <label for="name">Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="ex.Advik Ghatkar"
          required
        />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="ex.advikghatkar@email.com"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="submit"
          id="submit"
          value="Submit"
          onclick="register_user()"
        />
      </div>
      <div class="register-link">
        <p>
          Already have an account?
          <a href="http://localhost:3000/user-ui/login">Sign In</a>
        </p>
      </div>
    </div>
    <script src="../../js/register.js"></script>
  </body>
</html>
